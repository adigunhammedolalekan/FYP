<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.fyp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".FYP"
        android:theme="@style/Theme.FYP">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.FYP.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.SignInActivity" android:theme="@style/AppTheme" />
        <activity android:name=".ui.RegisterActivity" android:theme="@style/AppTheme" />
        <activity android:name=".ui.HomeActivity" android:theme="@style/AppTheme" />
        <activity android:name=".ui.AddFriendActivity" android:theme="@style/AppTheme" />
        <activity android:name=".ui.ChatActivity" android:theme="@style/AppTheme" />
    </application>

</manifest>